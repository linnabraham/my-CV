  \href{https://doi.org/\thefield{doi}}%
  {\textcolor{doicolor}{\faLink\ \thefield{doi}}}%
}

\DeclareFieldFormat{url}{%
  \href{\thefield{url}}%
  {\textcolor{doicolor}{\faLink\ \thefield{url}}}%
