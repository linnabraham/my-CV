% Custom circled numbering for bibliography items
\newcommand*\circled[1]{\tikz[baseline=(char.base)]{
   \node[shape=circle,text=white,fill=faiconcolor!80!black,font=\sffamily\scriptsize\bfseries,inner sep=1pt,text height=1.35ex,minimum width=1.2em,text centered] (char) {#1};}}

\newcounter{bibitem}
\AtBeginBibliography{\setcounter{bibitem}{1}}

\DeclareFieldFormat{labelnumberwidth}{\hspace{1.5em}\makebox[2.5em][l]{\circled{\thebibitem}}}
\setlength{\biblabelsep}{0pt}
\AtEveryBibitem{\stepcounter{bibitem}}

% Ensure urldate is removed completely
\AtEveryBibitem{
  \clearfield{urldate}  % Remove "Visited on" field globally
  \clearlist{urldate}   % Extra precaution: clear lists too
  \iffieldundef{doi}{}{
    \clearfield{url}     % Remove URL if DOI exists
    \clearfield{eprint}  % Remove eprint if DOI exists
  }
}

% Force urldate removal for online and misc entry types
\AtEveryBibitem{
  \ifentrytype{online}{
    \clearfield{urldate}
    \clearlist{urldate}
  }{}
  \ifentrytype{misc}{
    \clearfield{urldate}
    \clearlist{urldate}
  }{}
}

